{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Django Tests",
			"type": "python",
			"request": "launch",
			"program": "${file}",
			"purpose": [
				"debug-test"
			],
			"console": "integratedTerminal",
			"justMyCode": false,
			"env": {
				"PYTEST_ADDOPTS": "--no-cov"
			}
		},
		{
			"name": "Docker Web",
			"type": "python",
			"request": "attach",
			"pathMappings": [
				{
					"localRoot": "${workspaceFolder}",
					"remoteRoot": "/usr/src/app"
				}
			],
			"port": 8001,
			"host": "127.0.0.1",
		},
		{
			"name": "Docker Tasks",
			"type": "python",
			"request": "attach",
			"pathMappings": [
				{
					"localRoot": "${workspaceFolder}",
					"remoteRoot": "/usr/src/app"
				}
			],
			"port": 8002,
			"host": "127.0.0.1",
		},
	]
}